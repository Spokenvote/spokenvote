!!!
%html( ng-app="spokenvote" )
  %head
    %meta( charset="utf-8" )
    %meta( http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" )
    %meta( name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" )
    %title= content_for?(:title) ? yield(:title) : "SpokenVote"
    %meta( content="" name="description" )
    %meta( content="" name="author" )

    = favicon_link_tag
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Offside|Megrim|Audiowide|Yanone+Kaffeesatz'
    = stylesheet_link_tag "application", :media => "all"

    - min = Rails.env.production? ? '.min' : ''
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery#{min}.js"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular#{min}.js"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular-resource#{min}.js"
    = javascript_include_tag "//maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places"
    = javascript_include_tag "application"

    = csrf_meta_tags

    = yield(:head)

  %body( ng-controller='RootCtrl' )
    %ng-include(src="'/assets/shared/_navigation.html.haml'")

    #main( role="main" )
      .container
        .content
          .row
            -#= render 'shared/messages'
            #mainContent
              #alertContainer
                .pageAlert( alert-bar alertmessageclear='alertService.alertClass' )
              %ng-view

    = render 'shared/footer'
