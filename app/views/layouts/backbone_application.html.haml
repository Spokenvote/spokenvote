!!!
%html
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    %title SpokenVote (BB)
    %meta(content="" name="description")
    %meta(content="" name="author")
    = favicon_link_tag
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Offside|Megrim|Audiowide'
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "backbone_application"
    %script(src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places")
    = csrf_meta_tags
    :css
      * {
        margin: 0;
      }
      html, body {
        height: 100%;
      }
      .wrapper {
        min-height: 100%;
        height: auto !important;
        height: 100%;
        margin: 0 auto -4em;
      }
      footer, .push {
        height: 4em;
      }

  %body
    .wrapper
      = render 'shared/navigation'
      #main(role="main")
        .container
          .content
            .row
              #alertContainer
                /= render 'shared/messages'
              #mainContent
      .push
    = render 'shared/footer'
    /= render partial: '/shared/loginModal'
    /= render partial: '/shared/registrationModal'
    /= render partial: '/shared/confirmationModal'
    /= render partial: '/shared/hubModal'
