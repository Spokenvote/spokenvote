= nested_form_for @governing_body, :html => {:class => 'form-horizontal'} do |f|
  - if @governing_body.errors.any?
    #error_explanation
      %h2= "#{pluralize(@governing_body.errors.count, "error")} prohibited this governing_body from being saved:"
      %ul
        - @governing_body.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    .control-group
      = f.label :name, :class => 'control-label'
      .controls
        = f.text_field :name, :class => 'input-xxlarge'
    .control-group
      = f.label :description, :class => 'control-label'
      .controls
        = f.text_area :description, :class => 'input-xxlarge'
    .control-group
      = f.label :location, :class => 'control-label'
      .controls
        = f.text_field :location, :class => 'input-xxlarge'
    .control-group
      .controls
        = f.submit 'Save', class: 'btn btn-primary'
