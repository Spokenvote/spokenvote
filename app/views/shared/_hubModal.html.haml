#hubModal.modal.hide(data-width='400px' ng-controller ="HubsCtrl")
  .modal-header
    .pull-right= link_to raw('&times;'), '#', class: 'close', data: {dismiss: 'modal'}
    %h3 Create a new Group
    .container(ng-class="alertclass")
      %a.close(data-dismiss="alert") &#215;
      .content
        .row
          #alertContainer
            %ul
              %span {{addhub_result}}
              %span(ng-repeat="(key, values) in jsonErrors")
                %li(ng-repeat="value in values")
                  {{key | capitalize}} {{value}}
  .modal-body
    %form(ng-submit="addHub()")
      %fieldset
        .control-group
          .controls
            %input(id='hub_group_name' type='text' class='input-xlarge' placeholder='Enter your new group name' ng-model="newHub.group_name")
          .controls
            %input(googleplace id='hub_formatted_location' type='text' class='input-xlarge gpSearchBox' placeholder="Enter the Group's Location" data-ng-model='newHub.formatted_location' data-value_field='#hub_location_id')
  .modal-footer
    %fieldset
      .control-group
        .controls
          %button(ng-click="addHub()" class='btn btn-primary btn-bold') Angular Add Hub <i class="icon-ok"></i>
