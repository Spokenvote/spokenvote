#hubModal.modal.hide(data-width='400px' ng-controller ="HubCtrl")
  .modal-header
    .pull-right= link_to raw('&times;'), '#', class: 'close', data: {dismiss: 'modal'}
    %h3 Create a new Group
    .container(ng-class="alertclass")
      %a.close(data-dismiss="alert") &#215;
      .content
        .row
          #alertContainer
            {{addhub_result}}
  .modal-body
    %form(ng-submit="addHub()")
      %fieldset
        .control-group
          .controls
            %input(id='hub_group_name' type='text' class='input-xlarge' placeholder='Enter your the Name' ng-model="newHub.group_name")
          .controls

            %input{:id => 'hub_formatted_location', :class => 'input-xlarge gpSearchBox', data: {"ng-model" => "newHub.formatted_location", value_field: '#hub_location_id'}, placeholder: "Enter the Group's Location"}
            %input{:id => 'hub_location_id', data: {'ng-model' => 'newHub.location_id'}}

            -#TODO The format below did not quite work with jquery and Google Auto-complete, but can be used to replace the two above when jquery is eliminated.
            -#%input(id='hub_formatted_location' class='input-xlarge gpSearchBox' placeholder="Enter the Group's Location" data-ng-model='newHub.formatted_location' data-value_field='#hub_location_id')
            -#%input(id='hub_location_id' type='text' ng-model='newHub.location_id')

        .control-group
          .modal-footer
            .controls
              %button(type="submit" value="Submit" class='btn btn-primary btn-bold') Angular Add Hub <i class="icon-ok"></i>
