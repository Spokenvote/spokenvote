= form_for @vote do |f|
  - if @vote.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vote.errors.count, "error")} prohibited this vote from being saved:"
      %ul
        - @vote.errors.each_with_index do |msg, i|
          %li= msg[1]
  = f.hidden_field :user_id, :value => current_user.id
  
  .field
    = f.label :proposal_id
    = f.select :proposal_id, Proposal.all.map{|p| [p.statement, p.id] }
  .field
    = f.label :comment
    = f.text_area :comment
    
  .actions
    = f.submit 'Save'
