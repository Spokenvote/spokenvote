# All user-navigable routes appear below

angular.module('Spokenvote').config ['$routeProvider', '$locationProvider', ($routeProvider, $locationProvider) ->

  $routeProvider
  .when '/',
    templateUrl: "/"

  .when '/angular',
    templateUrl: "<%= asset_path('landing.html.haml') %>",
    controller: 'SpokenvoteCtrl'

  .when '/newgroup',
    controller: 'HubsCtrl',
    resolve:
      loadModal: -> angular.element("#hubModal").modal("show")

  .when '/hubs',
    templateUrl: "/hubs"

  .when '/hungry',
    template: '<h1>Getting tired of pizza. Switching to Fruit!</h1>'

  .otherwise
    template: '<h3>Angular does not have that route :( , but Rails might :)</h3>'
#    redirectTo: '/'

#  $locationProvider.html5Mode true    #  enabling html5Mode
]