#voteModal.modal
  .modal-header
    .pull-right( class='close'  ng-click='close()' ) &times;
    %h2 Proposal Support

    .selectedHub
      .hub
        .pull-right
          %h3 {{ clicked_proposal.hub.group_name }}
          %h5 {{ clicked_proposal.hub.formatted_location }}

  .modal-body
    #alertContainer
      .modalAlert( alert-bar alertmessageclear='alertService.alertClass' ng-show='alertService.alertDestination=="modal"' )

    %form( name='supportProposalForm' )
      .instructions
        .avatar
          %ng-include( src="'/assets/shared/_currentuser_avatar.html.haml'" )
        %h5 Ok, let's add Support!
        .proposal_statement
          %h4 {{ proposal.statement }}
      %textarea( id='support_comment' type='text' class='full-width' ng-model='newSupport.comment' required ng-minLength='7' ng-maxLength='140'
        placeholder='Please use between 7 and 140 characters in this space to explain why you would like to support this proposal.' )
      .length_counter( ng-show=' newSupport.comment.length > 7 ' ) {{ 280 - newSupport.comment.length }} characters remaining


  .modal-footer
    %fieldset
      .control-group
        .controls
          %button( ng-click="saveSupport()" class='btn btn-primary btn-bold' ng-hide='modal.saved' ng-disabled='!supportProposalForm.$valid' ) Vote for this proposal

